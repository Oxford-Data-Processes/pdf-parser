{
    "forms": {
        "customer_name": {
            "processor": "clean_text",
            "options": {
                "max_length": 50
            }
        },
        "sort_code": {
            "processor": "clean_text",
            "options": {
                "max_length": 9
            }
        },
        "account_number": {
            "processor": "clean_numbers",
            "options": {
                "allow_chars": ""
            }
        },
        "end_balance": {
            "processor": "clean_currency",
            "options": {
                "decimal_places": 2
            }
        },
        "total_outgoings": {
            "processor": "clean_currency",
            "options": {
                "decimal_places": 2
            }
        },
        "total_deposits": {
            "processor": "clean_currency",
            "options": {
                "decimal_places": 2
            }
        }
    },
    "tables": {
        "data": {
            "date": {
                "processor": "clean_date",
                "options": {
                    "input_format": "%d/%m/%Y",
                    "output_format": "%Y-%m-%d",
                    "use_statement_date_year": true
                }
            },
            "description": {
                "processor": "clean_text",
                "options": {
                    "max_length": 100
                }
            },
            "amount": {
                "processor": "clean_currency",
                "options": {
                    "decimal_places": 2
                }
            },
            "balance": {
                "processor": "clean_currency",
                "options": {
                    "decimal_places": 2
                }
            }
        }
    }
}
{
    "forms": {
        "customer_name": {
            "processor": "clean_text",
            "options": {
                "max_length": 50
            }
        },
        "sort_code": {
            "processor": "clean_text",
            "options": {
                "max_length": 9
            }
        },
        "account_number": {
            "processor": "clean_numbers",
            "options": {
                "allow_chars": ""
            }
        },
        "opening_balance": {
            "processor": "clean_currency",
            "options": {
                "decimal_places": 2
            }
        },
        "payments_in": {
            "processor": "clean_currency",
            "options": {
                "decimal_places": 2
            }
        },
        "payments_out": {
            "processor": "clean_currency",
            "options": {
                "decimal_places": 2
            }
        },
        "closing_balance": {
            "processor": "clean_currency",
            "options": {
                "decimal_places": 2
            }
        },
        "overdraft_limit": {
            "processor": "clean_currency",
            "options": {
                "decimal_places": 2
            }
        }
    },
    "tables": {
        "data": {
            "date": {
                "processor": "clean_date",
                "options": {
                    "input_format": "%d %b %y",
                    "output_format": "%Y-%m-%d",
                    "use_statement_date_year": true
                }
            },
            "payment_type": {
                "processor": "clean_text",
                "options": {
                    "uppercase": true
                }
            },
            "description": {
                "processor": "clean_text",
                "options": {
                    "max_length": 100
                }
            },
            "paid_out": {
                "processor": "clean_currency",
                "options": {
                    "decimal_places": 2
                }
            },
            "paid_in": {
                "processor": "clean_currency",
                "options": {
                    "decimal_places": 2
                }
            },
            "balance": {
                "processor": "clean_currency",
                "options": {
                    "decimal_places": 2
                }
            }
        }
    }
}

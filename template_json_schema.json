{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "metadata": {
        "type": "object",
        "properties": {
          "template_id": { "type": "string" },
          "version": { "type": "string" }
        },
        "required": ["template_id", "version"]
      },
      "rules": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "rule_id": { "type": "string" },
            "type": { "type": "string", "enum": ["form", "table"] },
            "config": {
              "type": "object",
              "oneOf": [
                {
                  "properties": {
                    "field_name": { "type": "string" },
                    "coordinates": {
                      "type": "object",
                      "properties": {
                        "top_left": {
                          "type": "object",
                          "properties": {
                            "x": { "type": "number" },
                            "y": { "type": "number" }
                          },
                          "required": ["x", "y"]
                        },
                        "bottom_right": {
                          "type": "object",
                          "properties": {
                            "x": { "type": "number" },
                            "y": { "type": "number" }
                          },
                          "required": ["x", "y"]
                        }
                      },
                      "required": ["top_left", "bottom_right"]
                    },
                    "type": { "type": "string" }
                  },
                  "required": ["field_name", "coordinates", "type"]
                },
                {
                  "properties": {
                    "columns": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "field_name": { "type": "string" },
                          "coordinates": {
                            "type": "object",
                            "properties": {
                              "top_left": {
                                "type": "object",
                                "properties": {
                                  "x": { "type": "number" },
                                  "y": { "type": "number" }
                                },
                                "required": ["x", "y"]
                              },
                              "bottom_right": {
                                "type": "object",
                                "properties": {
                                  "x": { "type": "number" },
                                  "y": { "type": "number" }
                                },
                                "required": ["x", "y"]
                              }
                            },
                            "required": ["top_left", "bottom_right"]
                          },
                          "type": { "type": "string" }
                        },
                        "required": ["field_name", "coordinates", "type"]
                      }
                    },
                    "row_delimiter": {
                      "type": "object",
                      "properties": {
                        "type": { "type": "string" },
                        "config": {
                          "type": "object",
                          "properties": {
                            "delimiter_field": { "type": "string" }
                          }
                        }
                      },
                      "required": ["type"]
                    }
                  },
                  "required": ["columns", "row_delimiter"]
                }
              ]
            }
          },
          "required": ["rule_id", "type", "config"]
        }
      },
      "pages": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "page_numbers": {
              "type": "string"
            },
            "forms": {
              "type": "array",
              "items": { "type": "string" }
            },
            "tables": {
              "type": "array",
              "items": { "type": "string" }
            },
            "ignore": { "type": "boolean" }
          },
          "required": ["page_numbers"]
        }
      }
    },
    "required": ["metadata", "rules", "pages"]
  }